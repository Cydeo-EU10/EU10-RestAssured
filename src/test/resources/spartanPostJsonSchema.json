{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "title": "POST /api/spartans endpoint success response",
  "description": "Schema for how successful post body should look like",
  "default": {},
  "examples": [
    {
      "success": "A Spartan is Born!",
      "data": {
        "id": 84,
        "name": "ABC",
        "gender": "Female",
        "phone": 1000000000
      }
    }
  ],
  "required": [
    "success",
    "data"
  ],
  "properties": {
    "success": {
      "$id": "#/properties/success",
      "type": "string",
      "title": "The success schema",
      "description": "An explanation about the purpose of this instance.",
      "pattern": "^A Spartan is Born!$"
    },
    "data": {
      "$id": "#/properties/data",
      "type": "object",
      "title": "The data schema",
      "description": "This is the actual data added to the server",
      "default": {},
      "examples": [
        {
          "id": 84,
          "name": "ABC",
          "gender": "Female",
          "phone": 1000000000
        }
      ],
      "required": [
        "id",
        "name",
        "gender",
        "phone"
      ],
      "properties": {
        "id": {
          "title": "Id",
          "type": "integer",
          "examples": [
            33
          ],
          "minimum": 1,
          "maximum": 100000
        },
        "name": {
          "title": "Name",
          "type": "string",
          "default": "",
          "examples": [
            "Wilek"
          ],
          "minLength": 2,
          "maxLength": 15
        },
        "gender": {
          "title": "Gender",
          "type": "string",
          "default": "Male",
          "examples": [
            "Male"
          ],
          "pattern": "^(Male|Female)$"
        },
        "phone": {
          "title": "Phone",
          "type": "integer",
          "examples": [
            2877865902
          ],
          "minimum": 1000000000,
          "maximum": 9999999999999
        }
      }
    }
  }
}